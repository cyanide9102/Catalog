@model Catalog.WebUI.ViewModels.AccountViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-3">
    <div class="row g-0">
        <div class="col-lg-6 col-md-9 col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row g-0">
                        <div class="col-12">
                            <h3 class="h3 fw-bold">@ViewData["Title"]</h3>
                            <form method="post" class="mb-3" autocomplete="off">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="mb-3">
                                    <label asp-for="UserName"></label>
                                    <input asp-for="UserName" class="form-control" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-8">
                                            <div class="checkbox">
                                                <label asp-for="RememberMe">
                                                    <input asp-for="RememberMe" />
                                                    @Html.DisplayNameFor(m => m.RememberMe)
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <button type="submit" class="btn btn-success float-end">Login</button>
                                        </div>
                                    </div>
                                </div>
                                @Html.AntiForgeryToken()
                            </form>
                            <p>
                                <a class="text-decoration-none" asp-controller="Account" asp-action="Register">Register a new user</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
