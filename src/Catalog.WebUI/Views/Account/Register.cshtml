@model Catalog.WebUI.ViewModels.AccountViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-3">
    <div class="row g-0">
        <div class="col-lg-6 col-md-9 col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row g-0">
                        <div class="col-12">
                            <h3 class="h3 fw-bold">@ViewData["Title"]</h3>
                            <form method="post" class="mb-3" autocomplete="off">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="mb-3">
                                    <label asp-for="UserName" class="form-label m-0">@Html.DisplayNameFor(m => m.UserName)</label>
                                    <input asp-for="UserName" class="form-control" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label m-0">@Html.DisplayNameFor(m => m.Email)</label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label m-0">@Html.DisplayNameFor(m => m.PhoneNumber)</label>
                                    <input asp-for="PhoneNumber" class="form-control" aria-label="Phone number" aria-describedby="phoneNumber">
                                    <span asp-validation-for="PhoneNumber" class="text-danger mb-3"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label m-0">@Html.DisplayNameFor(m => m.Password)</label>
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="ConfirmPassword" class="form-label m-0">@Html.DisplayNameFor(m => m.ConfirmPassword)</label>
                                    <input asp-for="ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="container-fluid">
                                    <button type="submit" class="btn btn-success float-end">Register</button>
                                </div>
                                @Html.AntiForgeryToken()
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
