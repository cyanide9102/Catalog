@model IEnumerable<Catalog.Core.Entities.Tag>
@{
    ViewData["Title"] = "Tags";
}

<div class="mb-3 text-end">
    <a asp-area="" asp-controller="Tag" asp-action="Create" class="btn btn-success">Create new Tag</a>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Created At</th>
                <th scope="col">Updated At</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tag in Model)
            {
                <tr>
                    <th scope="row">@tag.Id</th>
                    <td>@tag.Name</td>
                    <td>@tag.CreatedAt.ToLocalTime().ToString("dd MMMM, yyyy hh:mm tt")</td>
                    <td>@tag.UpdatedAt.ToLocalTime().ToString("dd MMMM, yyyy hh:mm tt")</td>
                    <td>
                        <a asp-area="" asp-controller="Tag" asp-action="Info" asp-route-id="@tag.Id" class="btn btn-sm btn-info">View</a>
                        <a asp-area="" asp-controller="Tag" asp-action="Edit" asp-route-id="@tag.Id" class="btn btn-sm btn-secondary">Edit</a>
                        <a asp-area="" asp-controller="Tag" asp-action="Info" asp-route-id="@tag.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
