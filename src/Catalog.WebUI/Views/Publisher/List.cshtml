@model IEnumerable<Catalog.Core.Entities.Publisher>
@{
    ViewData["Title"] = "Publishers";
}

<div class="mb-3 text-end">
    <a asp-area="" asp-controller="Publisher" asp-action="Create" class="btn btn-success">Create new Publisher</a>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Country</th>
                <th scope="col">Created At</th>
                <th scope="col">Updated At</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var publisher in Model)
            {
                <tr>
                    <th scope="row">@publisher.Id</th>
                    <td>@publisher.Name</td>
                    <td>@(publisher.Country ?? "")</td>
                    <td>@publisher.CreatedAt.ToLocalTime().ToString("dd MMMM, yyyy hh:mm tt")</td>
                    <td>@publisher.UpdatedAt.ToLocalTime().ToString("dd MMMM, yyyy hh:mm tt")</td>
                    <td>
                        <a asp-area="" asp-controller="Publisher" asp-action="Info" asp-route-id="@publisher.Id" class="btn btn-info">View</a>
                        <a asp-area="" asp-controller="Publisher" asp-action="Edit" asp-route-id="@publisher.Id" class="btn btn-secondary">Edit</a>
                        <a asp-area="" asp-controller="Publisher" asp-action="Info" asp-route-id="@publisher.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
